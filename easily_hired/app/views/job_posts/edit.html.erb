<%= form_for @job_post do |f| %>
<fieldset>

  <legend>Edit a job post:</legend>

<table>

  <tr>
    <td><%= f.label :title %></td>
    <td><%= f.text_field :title %></td>
  </tr>

  <tr>
    <td><%= f.label :description %></td>
    <td><%= f.text_area :description, cols: "50", rows: "10" %></td>
  </tr>

  <tr>
    <td><%= f.label :location %></td>
    <td><%= f.text_field :location %></td>
  </tr>

  <tr>
    <td><%= f.label :is_active, 'Is it Active?' %></td>
    <td><%= f.check_box :is_active, checked: true %></td>
  </tr>

  <tr>
    <td><%= label_tag :tags, 'Tags (Seperated By Space)' %></td>
    <td><%= text_area_tag :tags, value = @job_post.tags_toS, cols: "50", rows: "5"%></td>
  </tr>

  <tr>
    <td><%= f.hidden_field :creator_id, value: current_user.id %></td>
  </tr>


</table>
  <div>
    <%= submit_tag 'Edit Job Post' %>
  </div>

</fieldset>

<% end %>

