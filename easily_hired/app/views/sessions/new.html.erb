<%= form_tag session_path do %>
<fieldset>

  <legend>Please log in</legend>

<table>

  <tr>
    <td><%= label_tag :email %></td>
    <td><%= text_field_tag :email %></td>
  </tr>

  <tr>
    <td><%= label_tag :password %></td>
    <td><%= password_field_tag :password %></td>
  </tr>

</table>

  <div>
    <%= submit_tag 'Log in' %>
  </div>

</fieldset>

<% end %>
